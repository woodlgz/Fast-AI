#include "GA.h"
#include <stdlib.h>

namespace FASTAI{
	namespace GA{

		void Env::evaluate(){
			float accumScore = 0.0;
			m_Max = 0;
			m_Min = 0;
			for(int i=0;i<m_PSize;i++){
				m_Score[i] = judge(i);
				m_ScoreAux[i] = m_Score[i] + accumScore;
				accumScore = m_ScoreAux[i];
				if(m_Score[m_Max]<m_Score[i])
					m_Max = i;
				if(m_Score[m_Min]>m_Score[i])
					m_Min = i;
			}
		}

		void Env::reproduction(){

		}

		void Env::exchage(){

		}

		void Env::mutate(){

		}

		GeneticPhase* Solve(Env* env){
			return NULL;
		}
	};
};
