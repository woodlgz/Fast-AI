
CC = gcc
GXX = g++

GA_SOURCE = ./GA.cpp
UTIL_SOURCE = ./Util.cpp
MAIN_SOURCE = ./Main.cpp

INCLUDE_PATH = -I/usr/include/ 
LIRARY_PATH = -L/usr/lib64 
LIBS = 

GA_TARGET = GA.o
UTIL_TARGET = Util.o
MAIN_TARGET = GA_DEMO
DEBUG_PATH = ./Debug
RELEASE_PATH = ./Release


CCFLAGS = 

GA_DEBUG:
	$(GXX) -c $(GA_SOURCE) -o $(DEBUG_PATH)/$(GA_TARGET) $(CCFLAGS)
	$(GXX) -c $(UTIL_SOURCE) -o $(DEBUG_PATH)/$(UTIL_TARGET) $(CCFLAGS)
GA_RELEASE:
	$(GXX) -c $(GA_SOURCE) -o $(RELEASE_PATH)/$(GA_TARGET) $(CCFLAGS)
	$(GXX) -c $(UTIL_SOURCE) -o $(RELEASE_PATH)/$(UTIL_TARGET) $(CCFLAGS)
debug:
	mkdir $(DEBUG_PATH)
	make GA_DEBUG
	$(GXX) -c $(MAIN_SOURCE) -o $(DEBUG_PATH)/$(MAIN_TARGET).o $(INCLUDE_PATH) $(CCFLAGS)
	$(GXX) $(DEBUG_PATH)/$(MAIN_TARGET).o $(DEBUG_PATH)/$(GA_TARGET) $(DEBUG_PATH)/$(UTIL_TARGET) -o $(DEBUG_PATH)/$(MAIN_TARGET) $(LIBBRARY_PATH) $(LIBS)

release:
	mkdir $(RELEASE_PATH)
	make GA_RELEASE
	$(GXX) -c $(MAIN_SOURCE) -o $(RELEASE_PATH)/$(MAIN_TARGET).o $(INCLUDE_PATH) $(CCFLAGS)
	$(GXX) $(RELEASE_PATH)/$(MAIN_TARGET).o $(RELEASE_PATH)/$(GA_TARGET) $(DEBUG_PATH)/$(UTIL_TARGET) -o $(RELEASE_PATH)/$(MAIN_TARGET) $(LIBBRARY_PATH) $(LIBS)

all:
	make debug
	make release

clean:
	rm -rf $(DEBUG_PATH)
	rm -rf $(RELEASE_PATH)

